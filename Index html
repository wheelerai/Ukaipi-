        let currentFilter = 'all';

        function renderTools(toolsToRender) {
            const grid = document.getElementById('toolsGrid');
            grid.innerHTML = '';

            // Sort Kimi first
            if (currentFilter === 'all') {
                toolsToRender.sort((a, b) => (b.isKimi - a.isKimi));
            }

            toolsToRender.forEach((tool, index) => {
                const card = document.createElement('div');
                card.className = 'tool-card';
                card.style.animationDelay = `${index * 0.1}s`;
                
                const initials = tool.name.substring(0, 2).toUpperCase();
                const stars = 'â˜…'.repeat(Math.floor(tool.rating)) + 'â˜†'.repeat(5 - Math.floor(tool.rating));
                
                card.innerHTML = `
                    ${tool.isNew ? '<span class="badge new">New</span>' : ''}
                    ${tool.isKimi ? '<span class="badge kimi">Kimi</span>' : ''}
                    <div class="tool-header">
                        <div class="tool-icon ${tool.isKimi ? 'kimi-icon' : ''}">${initials}</div>
                        <div class="tool-meta">
                            <h3>${tool.name}</h3>
                            <span class="tool-category ${tool.isKimi ? 'kimi-cat' : ''}">${tool.category}</span>
                        </div>
                    </div>
                    <p class="tool-description">${tool.description}</p>
                    <div class="tool-stats">
                        <div class="rating">
                            <span class="stars">${stars}</span>
                            <span class="rating-num">${tool.rating}</span>
                            <span class="reviews-count">(${tool.reviews.toLocaleString()})</span>
                        </div>
                        <a href="${tool.url}" target="_blank" class="neon-btn ${tool.isKimi ? 'pink' : ''}">Access</a>
                    </div>
                `;
                
                grid.appendChild(card);
            });
        }

        function filterCategory(category) {
            currentFilter = category;
            
            document.querySelectorAll('.filter-chip').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            let filtered = tools;
            
            if (category === 'newest') {
                filtered = tools.filter(t => t.isNew);
            } else if (category !== 'all') {
                filtered = tools.filter(t => t.category === category);
            }
            
            renderTools(filtered);
        }

        function searchTools() {
            const query = document.getElementById('searchInput').value.toLowerCase();
            const filtered = tools.filter(t => 
                t.name.toLowerCase().includes(query) || 
                t.description.toLowerCase().includes(query)
            );
            renderTools(filtered);
        }

        function showKimiTools() {
            filterCategory('kimi');
            document.querySelectorAll('.filter-chip').forEach(btn => {
                btn.classList.remove('active');
                if (btn.textContent.includes('Kimi')) btn.classList.add('active');
            });
        }

        function submitTool(event) {
            event.preventDefault();
            
            const category = document.getElementById('toolCategory').value;
            const isKimi = category === 'kimi';
            
            const newTool = {
                id: tools.length + 1,
                name: document.getElementById('toolName').value,
                category: category,
                description: document.getElementById('toolDescription').value,
                url: document.getElementById('toolUrl').value,
                rating: 0,
                reviews: 0,
                isNew: true,
                isKimi: isKimi
            };
            
            tools.unshift(newTool);
            renderTools(tools);
            document.getElementById('toolForm').reset();
            
            // Success animation
            const btn = document.querySelector('.submit-btn');
            btn.textContent = 'Upload Complete âœ“';
            btn.style.background = 'linear-gradient(135deg, #00ff88, #00cc66)';
            setTimeout(() => {
                btn.textContent = 'Initialize Upload Sequence';
                btn.style.background = '';
            }, 2000);
        }

        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') searchTools();
        });

        // Initial render
        renderTools(tools);
        
        // Add binary rain animation style
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fall {
                to { transform: translateY(100vh); }
            }
        `;
        document.head.appendChild(style);
        
        // Start binary rain
        setTimeout(createBinaryRain, 1000);
    </script>
